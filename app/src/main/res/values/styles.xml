<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme0" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryTh0</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkTh0</item>
        <item name="colorAccent">@color/colorAccentTh0</item>
        <item name="android:textSize">22sp</item>
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
    </style>

    <style name="AppTheme1" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryTh1</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkTh1</item>
        <item name="colorAccent">@color/colorAccentTh1</item>
    </style>

    <style name="AppTheme2" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryTh2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkTh2</item>
        <item name="colorAccent">@color/colorAccentTh2</item>
    </style>

    <style name="AppTheme3" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryTh3</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkTh3</item>
        <item name="colorAccent">@color/colorAccentTh3</item>
    </style>
    
    <style name="inputFieldOutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorTextColor">?attr/colorAccent</item>
        <item name="errorTextAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="hintTextColor">?attr/colorAccent</item>
        <item name="android:textColorHint">?attr/colorPrimaryDark</item>
        <item name="hintTextAppearance">@style/TextAppearance.MaterialComponents.Headline5</item>
        <item name="android:focusable">false</item>
        <item name="android:state_focused">false</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="materialButton">
        <item name="elevation">4dp</item>
    </style>

    <style name="ButtonSelection">
        <item name="android:textSize">28sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="textBadge">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
